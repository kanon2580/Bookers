<body>

	<main class="index">
		<h1>Books</h1>

		<table>
			<thead>
				<tr>
					<th class="title">Title</th>
					<th class="body">Body</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><%=link_to 'show', book_path(book.id) %></td>
						<td><%=link_to 'Edit', edit_book_path(book.id) %></td>
						<td>Destroy</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</main>

	<main class="new">
		<h1>New book</h1>

		<%= form_for(@book) do |f| %>
			<div class="new-item">
				<p>Title</p>
				<span><%= f.text_field :title %></span>
			</div>

			<div class="new-item">
				<p>Body</p>
				<span><%= f.text_area :body %></span>
			</div>

			<div class="new-item">
				<span><%= f.submit 'Create Book' %></span>
			</div>
		<% end %>
	</main>

</body>